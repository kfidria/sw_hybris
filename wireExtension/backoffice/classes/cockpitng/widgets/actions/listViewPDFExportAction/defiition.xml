<action-definition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   id="com.hybris.cockpitng.listview.action.export.csv"
                   xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/action-definition.xsd">
    <name>Export List View To PDF Action</name>
    <description>
        Action providing implementation of List View to PDF export. It exports All of the visible columns of the List
        View that have text representation.
    </description>
    <author>kfidria</author>
    <version>0.1</version>
    <actionClassName>org.wireExtension.widgets.actions.export.pdf.ListViewExportPDFAction</actionClassName>
    <inputType>java.util.Map</inputType>
    <iconUri>icons/icon_action_export_pdf_default.png</iconUri>
    <iconDisabledUri>icons/icon_action_export_pdf_disabled.png</iconDisabledUri>
    <iconHoverUri>icons/icon_action_export_pdf_default.png</iconHoverUri>
    <settings>
        <setting key="confirmation.threshold" default-value="500" type="java.lang.Integer"/>
    </settings>
</action-definition>